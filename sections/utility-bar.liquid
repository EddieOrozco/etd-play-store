

{% schema %}
{
  "name": "Utility Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_utility_bar",
      "label": "Enable Utility Bar",
      "default": true
    },
    {
       "type": "select",
       "id": "utility_bar_width",
       "label": "Utility Bar Width",
       "options": [
            {
                "value": "full-width",
                "label": "Full Width"
            },
            {
                "value": "page-width",
                "label": "Page Width"
            }
        ],
        "default": "full-width"
    },
    {
        "type": "select",
        "id": "utility_bar_sticky",
        "label": "Sticky Utility Bar",
        "options": [
            {
                "value": "none",
                "label": "None"
            },
            {
                "value": "always",
                "label": "Always Sticky"
            }
        ],
        "default": "always"
    },
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "scheme_1",
        "label": "Color scheme"
    },
    {
        "type": "select",
        "id": "logo_position",
        "label": "Logo Position",
        "options": [
            {
            "value": "left",
            "label": "Left"
            },
            {
            "value": "middle",
            "label": "Middle"
            },
            {
            "value": "right",
            "label": "Right"
            },
            {
            "value": "hidden",
            "label": "Hidden"
            }
        ],
        "default": "left"
    }
  ],
  "presets": [
    {
      "name": "Utility Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}