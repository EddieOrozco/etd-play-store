{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true

  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
-%}

{%- comment -%} Load only what we need {%- endcomment -%}
{% if section.blocks.size > 1 %}
  {{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
{% endif %}
{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}

{% if section.settings.show_social and social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

{%- comment -%}
=============================================================
ANNOUNCEMENT BAR
Toggle between custom announcement or block-based announcements
=============================================================
{%- endcomment -%}

{%- if section.settings.show_custom_announcement -%}
  {%- comment -%} CUSTOM ANNOUNCEMENT MODE {%- endcomment -%}
  <div
    class="announcement-wrapper"
    style="background-color: {{ section.settings.background_color }};"
  >
    <div
      class="custom-announcement-bar page-width{% if section.settings.enable_hover_color %} has-hover-color{% endif %}"
      style="
        color: {{ section.settings.announcement_text_color }};
        {% if section.settings.enable_hover_color %}--hover-color: {{ section.settings.announcement_hover_color }};{% endif %}
      "
      role="region"
      aria-label="{{ 'sections.header.announcement' | t }}"
    >
      {%- if section.settings.custom_announcement_text != blank -%}
        {%- if section.settings.custom_announcement_link != blank -%}
          <a href="{{ section.settings.custom_announcement_link }}">
            {{ section.settings.custom_announcement_text | escape }}
          </a>
        {%- else -%}
          <span>{{ section.settings.custom_announcement_text | escape }}</span>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>

{%- else -%}
  {%- comment -%} BLOCK-BASED ANNOUNCEMENT MODE {%- endcomment -%}

  {%- if section.blocks.size == 1 -%}
    {%- comment -%} SINGLE BLOCK ANNOUNCEMENT {%- endcomment -%}
    <div
      class="announcement-wrapper"
      style="background-color: {{ section.settings.background_color }};"
    >
      <div
        class="announcement-bar page-width{% if section.settings.enable_hover_color %} has-hover-color{% endif %}"
        style="
          color: {{ section.settings.announcement_text_color }};
          {% if section.settings.enable_hover_color %}--hover-color: {{ section.settings.announcement_hover_color }};{% endif %}
        "
        role="region"
        aria-label="{{ 'sections.header.announcement' | t }}"
        {{ section.blocks.first.shopify_attributes }}
      >
        {%- if section.blocks.first.settings.text != blank -%}
          {%- if section.blocks.first.settings.link != blank -%}
            <a href="{{ section.blocks.first.settings.link }}">
              {{ section.blocks.first.settings.text | escape }}
            </a>
          {%- else -%}
            <span>{{ section.blocks.first.settings.text | escape }}</span>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>

  {%- elsif section.blocks.size > 1 -%}
    {%- comment -%} MULTIPLE ANNOUNCEMENTS (SLIDER) {%- endcomment -%}
    <div
      class="announcement-wrapper"
      style="background-color: {{ section.settings.background_color }};"
    >
      <slideshow-component
        class="announcement-bar page-width"
        role="region"
        aria-roledescription="{{ 'sections.announcements.carousel' | t }}"
        aria-label="{{ 'sections.announcements.announcement_bar' | t }}"
      >
        <div class="announcement-bar-slider slider-buttons">

          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'sections.announcements.previous_announcement' | t }}"
            aria-controls="Slider-{{ section.id }}"
            style="color: {{ section.settings.announcement_text_color }};"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>

          <div
            class="grid grid--1-col slider slider--everywhere"
            id="Slider-{{ section.id }}"
            aria-live="polite"
            aria-atomic="true"
            data-autoplay="{{ section.settings.auto_rotate }}"
            data-speed="{{ section.settings.change_slides_speed }}"
          >
            {%- for block in section.blocks -%}
              <div
                class="slideshow__slide slider__slide grid__item grid--1-col"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
                role="group"
                aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                tabindex="-1"
              >
                <div
                  class="announcement-bar__announcement{% if section.settings.enable_hover_color %} has-hover-color{% endif %}"
                  role="region"
                  aria-label="{{ 'sections.header.announcement' | t }}"
                  style="
                    color: {{ section.settings.announcement_text_color }};
                    {% if section.settings.enable_hover_color %}--hover-color: {{ section.settings.announcement_hover_color }};{% endif %}
                  "
                >
                  {%- if block.settings.text != blank -%}
                    {%- if block.settings.link != blank -%}
                      <a href="{{ block.settings.link }}">
                    {%- endif -%}

                    <p class="announcement-bar__message">
                      <span>{{ block.settings.text | escape }}</span>
                    </p>

                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>

          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'sections.announcements.next_announcement' | t }}"
            aria-controls="Slider-{{ section.id }}"
            style="color: {{ section.settings.announcement_text_color }};"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>

        </div>
      </slideshow-component>
    </div>

    {%- if request.design_mode -%}
      <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
      <style>
        .announcement-bar-slider .slider__slide[aria-hidden='true'] {
          visibility: hidden;
        }
      </style>
    {%- endif -%}
  {%- endif -%}

{%- endif -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Custom Announcement"
    },
    {
      "type": "paragraph",
      "content": "Enable to show a single custom announcement instead of block-based announcements."
    },
    {
      "type": "checkbox",
      "id": "show_custom_announcement",
      "label": "Enable custom announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_announcement_text",
      "label": "Announcement text",
      "default": "Welcome to our store!"
    },
    {
      "type": "url",
      "id": "custom_announcement_link",
      "label": "Announcement link (optional)"
    },
    {
      "type": "header",
      "content": "Block Announcements"
    },
    {
      "type": "paragraph",
      "content": "Add announcement blocks in the left sidebar. Enable auto-rotate for multiple announcements."
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.announcement-bar.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.announcement-bar.settings.change_slides_speed.label",
      "default": 5
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#605e7d"
    },
    {
      "type": "color",
      "id": "announcement_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "enable_hover_color",
      "label": "Enable custom hover color",
      "default": false,
      "info": "When disabled, links will brighten on hover. When enabled, you can set a specific hover color."
    },
    {
      "type": "color",
      "id": "announcement_hover_color",
      "label": "Link hover color",
      "default": "#cccccc",
      "info": "Only applies when custom hover color is enabled"
    },
    {
      "type": "header",
      "content": "Additional Settings"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": false,
      "label": "t:sections.announcement-bar.settings.show_social.label",
      "info": "t:sections.announcement-bar.settings.show_social.info"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": false,
      "label": "t:sections.announcement-bar.settings.enable_country_selector.label",
      "info": "t:sections.announcement-bar.settings.enable_country_selector.info"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": false,
      "label": "t:sections.announcement-bar.settings.enable_language_selector.label",
      "info": "t:sections.announcement-bar.settings.enable_language_selector.info"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}